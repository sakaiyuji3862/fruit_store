<header class="sub-header">
  <p class="sub-title">規格外の果物やさん</p>
  <div class="nav-menu">
    <%= link_to "新規登録", new_user_registration_path, class: "sub-btn" %>
    <%= link_to "トップページ", root_path, class: "sub-btn" %>
  </div>
</header>
<%= image_tag "AdobeStock_351352526.jpeg", alt: "top icon", id: "password-image" %>
<div class="login-menu-password">
  <h1>Forgot your password?</h1>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>


    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input-default" %>
    </div>

    <div class="actions">
      <%= f.submit "Send me reset password instructions", class: "sub-btn" %>
    </div>

  <% end %>

  <%= render "devise/shared/links" %>
</div>
