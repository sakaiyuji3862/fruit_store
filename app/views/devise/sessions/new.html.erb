<header class="sub-header">
  <p class="sub-title">規格外の果物やさん</p>
  <div class="nav-menu">
    <%= link_to "新規登録", new_user_registration_path, class: "sub-btn" %>
    <%= link_to "トップページ", root_path, class: "sub-btn" %>
  </div>
</header>
<%= image_tag "AdobeStock_21765838.jpeg", alt: "top icon", id: "login-image" %>
<div class="login-menu">
  <h1 class="login">Login</h1>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= render 'shared/error_messages', model: f.object %>
    <div class='login-flash-message'>
      <%= flash[:notice] %>
      <%= flash[:alert] %>
    </div>
    
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, class:"input-default", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, class:"input-default", autocomplete: "current-password" %>
    </div>

    <div class="guest-login">
      <%= link_to 'ゲストログイン', users_guest_sign_in_path, method: :post %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: "remember_me" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "sub-btn" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
